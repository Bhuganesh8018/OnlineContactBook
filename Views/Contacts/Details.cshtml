@model OnlineContactBook.Models.Contact

@{
    ViewData["Title"] = "Details";
}

<h2>Contact Details</h2>

<div class="details-card">
    <dl>
        <dt>Name</dt>
        <dd>@Model.Name</dd>

        <dt>Email</dt>
        <dd>@Model.Email</dd>

        <dt>Phone Number</dt>
        <dd>@Model.PhoneNumber</dd>

        <dt>Address</dt>
        <dd>@Model.Address</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-primary">Edit</a>
    <a asp-action="Index" class="btn-secondary">Back to List</a>
</p>
