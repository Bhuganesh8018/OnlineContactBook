<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Online Contact Book</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="top-bar">
        <div class="container">
            <h1 class="logo">Online Contact Book</h1>
            <nav>
                <a asp-controller="Contacts" asp-action="Index">Home</a>
                <a asp-controller="Contacts" asp-action="Create">Add Contact</a>
            </nav>
        </div>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Online Contact Book</p>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
